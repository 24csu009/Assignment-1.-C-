#include <iostream>
using namespace std;

int main() {
    string str, cleanStr = "";
    cout << "Enter a string: ";
    getline(cin, str);

    for (char c : str) {
        if (isalnum(c)) {  
            cleanStr += tolower(c);
        }
    }

    int n = cleanStr.length();
    bool palindrome = true;
    for (int i = 0; i < n / 2; i++) {
        if (cleanStr[i] != cleanStr[n - i - 1]) {
            palindrome = false;
            break;
        }
    }

    cout << (palindrome ? "The string is a palindrome" : "The string is not a palindrome") << endl;
    return 0;
}
#include <iostream>
using namespace std;

int main() {
    string str;
    cout << "Enter string: ";
    getline(cin, str);

    int freq[256] = {0}; 

    for (char c : str) {
        if (c != ' ') 
            freq[c]++;
    }

    for (int i = 0; i < 256; i++) {
        if (freq[i] > 0) {
            cout << char(i) << ": " << freq[i] << endl;
        }
    }

    return 0;
}
#include <iostream>
using namespace std;

int main() {
    string str;
    cout << "Enter string: ";
    getline(cin, str);

    for (char &c : str) {
        if (tolower(c) == 'a' || tolower(c) == 'e' || tolower(c) == 'i' || tolower(c) == 'o' || tolower(c) == 'u') {
            c = '*';
        }
    }

    cout << "Updated string: " << str;
    return 0;
}
